    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Extract relevant information from the page
            const pageTitle = document.title;
            const pageURL = window.location.href;

            // Generate update content
            const updateDescription = `New content available: ${pageTitle}`;
            const updateLink = `<a href="${pageURL}">View</a>`;

            // Create update box content
            const updateContent = `<div>${updateDescription} - ${updateLink}</div>`;

            // Insert update box content into the update box
            document.querySelector('.update-box').innerHTML = updateContent;
        });
    </script>

